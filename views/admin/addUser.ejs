<%- include('../layout/head.ejs') %>

<h1 style="margin: 50px;" >Add User</h1>

<div class="row justify-content-center mt-5"> 
  <div class="col-12 col-md-7"> 

    <% if(validation.userExists){ %>
      <p style="color: red; ">User Exists!!</p>
    <% } %>    

      <form action="/admin/addUser" method="post"> 

          <div class="form-group"> 
              <label for="exampleInputName1">User Name</label> 
              <input type="text" name="name" class="form-control" id="name" required> 
          </div> 
          <div class="form-group mt-3"> 
              <label for="exampleInputExpertise1">Email</label> 
              <input type="email" name="email" class="form-control" id="email" required> 
          </div> 
          <div class="form-group mt-3"> 
              <label for="exampleInputExpertise1">Password</label> 
              <input type="text" name="pass" class="form-control" id="pass" required> 
          </div> 
          <button type="submit" class="btn btn-warning mt-3">Add User</button> 
      </form> 
  </div> 
</div>


