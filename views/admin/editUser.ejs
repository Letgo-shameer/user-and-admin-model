<%- include('../layout/head.ejs') %>

<h1 style="margin: 50px;" >Edit User</h1>

<div class="row justify-content-center mt-5"> 
  <div class="col-12 col-md-7"> 

      <form action="/admin/editUser?id=<%= user._id %>" method="post"> 

          <div class="form-group"> 
              <label for="exampleInputName1">User Name</label> 
              <input type="text" value="<%= user.name %>" name="name" class="form-control" id="name" required> 
          </div> 
          <div class="form-group mt-3"> 
              <label for="exampleInputExpertise1">Email</label> 
              <input type="email" value="<%= user.email %>" name="email" class="form-control" id="email" required> 
          </div> 
          <div class="form-group mt-3"> 
              <label for="exampleInputExpertise1">Password</label> 
              <input type="text" value="<%= user.password %>" name="pass" class="form-control" id="pass" required> 
          </div> 
          <button type="submit" class="btn btn-warning mt-3">Edit User</button> 
      </form> 
  </div> 
</div>


